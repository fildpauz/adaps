                <t>a</t>
                <t>link</t>
                <t>to</t>
                <t>an</t>
                <t>online</t>
                <t>survey</t>
                <punc>,</punc>
                <t>which</t>
                <t>asked</t>
                <t>participants</t>
                <t>to</t>
                <t>answer</t>
                <t>five</t>
                <t>questions</t>
                <punc>[</punc>
                <t>about</t>
                <t>their</t>
                <t>feelings</t>
