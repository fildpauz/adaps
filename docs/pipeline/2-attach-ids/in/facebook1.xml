                <t>perceptions</t>
                <t>of</t>
                <t>Facebook</t>
                <t>support</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>We</t>
                <t>also</t>
                <t>assessed</t>
                <t>participants'</t>
                <t>motivation</t>
                <t>for</t>
                <t>using</t>
                <t>Facebook</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>In</t>
                <t>Phase</t>
                <t>2</t>
                <punc>,</punc>
                <t>participants</t>
                <t>were</t>
                <t>text</t>
				<punc>-</punc>
				<t>messaged</t>
                <t>5</t>
                <t>times</t>
                <t>per</t>
                <t>day</t>
                <t>between</t>
                <t>10am</t>
