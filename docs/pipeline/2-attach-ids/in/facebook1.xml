    <body>
        <paragraph>
            <sentence>
                <t>In</t>
                <t>Phase</t>
                <t>1</t>
                <punc>,</punc>
                <t>participants</t>
                <t>completed</t>
                <t>a</t>
                <t>set</t>
                <t>of</t>
