            <sentence>
                <t>Text</t>
				<punc>-</punc>
				<t>messages</t>
                <t>occurred</t>
                <t>at</t>
                <t>random</t>
                <t>times</t>
                <t>within</t>
                <t>168</t>
				<punc>-</punc>
				<t>minute</t>
                <t>windows</t>
                <t>per</t>
                <t>day</t>
