    <body>
        <paragraph>
            <sentence>
                <t>Living</t>
                <t>things</t>
                <t>are</t>
                <t>highly</t>
                <t>organized</t>
                <t>and</t>
                <t>structured</t>
                <punc>,</punc>
                <t>following</t>
                <t>a</t>
                <t>hierarchy</t>
                <t>that</t>
                <t>can</t>
                <t>be</t>
                <t>examined</t>
                <t>on</t>
                <t>a</t>
                <t>scale</t>
                <t>from</t>
                <t>small</t>
                <t>to</t>
                <t>large</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>The</t>
                <t>atom</t>
                <t>is</t>
                <t>the</t>
                <t>smallest</t>
                <t>and</t>
                <t>most</t>
                <t>fundamental</t>
                <t>unit</t>
                <t>of</t>
                <t>matter</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>It</t>
                <t>consists</t>
                <t>of</t>
                <t>a</t>
                <t>nucleus</t>
                <t>surrounded</t>
                <t>by</t>
                <t>electrons</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>Atoms</t>
                <t>form</t>
                <t>molecules</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>A</t>
                <t>molecule</t>
                <t>is</t>
                <t>a</t>
                <t>chemical</t>
                <t>structure</t>
                <t>consisting</t>
                <t>of</t>
                <t>at</t>
                <t>least</t>
                <t>two</t>
                <t>atoms</t>
                <t>held</t>
                <t>together</t>
                <t>by</t>
                <t>one</t>
                <t>or</t>
                <t>more</t>
                <t>chemical</t>
                <t>bonds</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>Many</t>
                <t>molecules</t>
                <t>that</t>
                <t>are</t>
                <t>biologically</t>
                <t>important</t>
                <t>are</t>
                <t>macromolecules</t>
                <punc>,</punc>
                <t>large</t>
                <t>molecules</t>
                <t>that</t>
                <t>are</t>
                <t>typically</t>
                <t>formed</t>
                <t>by</t>
                <t>polymerization</t>
                <punc>(</punc>
                <t>a</t>
                <t>polymer</t>
                <t>is</t>
                <t>a</t>
                <t>large</t>
                <t>molecule</t>
                <t>that</t>
                <t>is</t>
                <t>made</t>
                <t>by</t>
                <t>combining</t>
                <t>smaller</t>
                <t>units</t>
                <t>called</t>
                <t>monomers</t>
                <punc>,</punc>
                <t>which</t>
                <t>are</t>
                <t>simpler</t>
                <t>than</t>
                <t>macromolecules</t>
                <punc>)</punc>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>An</t>
                <t>example</t>
                <t>of</t>
                <t>a</t>
                <t>macromolecule</t>
                <t>is</t>
                <t>deoxyribonucleic</t>
                <t>acid</t>
                <punc>(</punc>
                <t>DNA</t>
                <punc>)</punc>
                <punc>,</punc>
                <t>which</t>
                <t>contains</t>
                <t>the</t>
                <t>instructions</t>
                <t>for</t>
                <t>the</t>
                <t>structure</t>
                <t>and</t>
                <t>functioning</t>
                <t>of</t>
                <t>all</t>
                <t>living</t>
                <t>organisms</t>
                <punc>.</punc>
            </sentence>
        </paragraph>
