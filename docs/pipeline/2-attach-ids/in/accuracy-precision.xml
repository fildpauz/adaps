                <t>as</t>
                <t>high</t>
                <t>as</t>
                <t>45,500</t>
                <t>miles</t>
                <punc>,</punc>
                <t>or</t>
                <t>anywhere</t>
                <t>in</t>
                <t>between</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>All</t>
