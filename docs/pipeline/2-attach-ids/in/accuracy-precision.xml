                <t>the</t>
                <t>measurements</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>Uncertainty</t>
                <t>is</t>
                <t>a</t>
                <t>quantitative</t>
                <t>measure</t>
                <t>of</t>
                <t>how</t>
                <t>much</t>
                <t>your</t>
                <t>measured</t>
                <t>values</t>
                <t>deviate</t>
                <t>from</t>
                <t>a</t>
                <t>standard</t>
                <t>or</t>
                <t>expected</t>
                <t>value</t>
