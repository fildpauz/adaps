    <body>
        <paragraph>
            <sentence>
                <t>Science</t>
                <t>is</t>
                <t>based</t>
                <t>on</t>
                <t>observation</t>
                <t>and</t>
                <t>experiment</t>
				<punc>—</punc>
				<t>that</t>
                <t>is</t>
                <punc>,</punc>
                <t>on</t>
                <t>measurements</t>
                <punc>.</punc>
            </sentence>
            <sentence>
