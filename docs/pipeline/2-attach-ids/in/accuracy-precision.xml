                <t>precise</t>
                <t>because</t>
                <t>they</t>
                <t>did</t>
                <t>not</t>
                <t>vary</t>
                <t>too</t>
                <t>much</t>
                <t>in</t>
                <t>value</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>However</t>
                <punc>,</punc>
                <t>if</t>
                <t>the</t>
                <t>measured</t>
                <t>values</t>
