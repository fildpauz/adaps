                <t>a</t>
                <t>disclaimer</t>
                <t>for</t>
                <t>your</t>
                <t>measured</t>
                <t>values</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>For</t>
                <t>example</t>
