                <t>the</t>
                <t>precision</t>
                <t>of</t>
                <t>the</t>
                <t>measurements</t>
                <t>would</t>
                <t>be</t>
                <t>to</t>
                <t>determine</t>
                <t>the</t>
                <t>range</t>
