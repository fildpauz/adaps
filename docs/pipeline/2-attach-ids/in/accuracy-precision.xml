                <t>and</t>
                <t>11.9</t>
                <punc>,</punc>
                <t>then</t>
                <t>the</t>
                <t>measurements</t>
                <t>would</t>
                <t>not</t>
                <t>be</t>
                <t>very</t>
                <t>precise</t>
                <t>because</t>
                <t>there</t>
                <t>would</t>
                <t>be</t>
                <t>significant</t>
                <t>variation</t>
                <t>from</t>
                <t>one</t>
                <t>measurement</t>
                <t>to</t>
                <t>another</t>
                <punc>.</punc>
            </sentence>
        </paragraph>
        <paragraph>
            <sentence>
                <t>The</t>
                <t>measurements</t>
