                <t>often</t>
                <t>claim</t>
                <t>human</t>
                <t>lives</t>
                <punc>.</punc>
            </sentence>
            <sentence>
                <t>Muddy-debris</t>
                <t>flows</t>
                <t>can</t>
                <t>start</t>
                <t>as</t>
                <t>a</t>
                <t>result</t>
                <t>of</t>
                <t>slope-related</t>
                <t>factors</t>
